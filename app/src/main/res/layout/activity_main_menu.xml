<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenuActivity"
        android:orientation="vertical"
        android:background="#9BC6C2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select View Type"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:background="#929E9D">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/calendar_list_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List View"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:background="#929E9D">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/calendar_list_grid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grid View"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnCorousal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:background="#929E9D">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/calendar_list_corousal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corousal View"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp" />
        </LinearLayout>


    </LinearLayout>
</layout>